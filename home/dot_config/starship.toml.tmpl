# vim: set ft=toml
"$schema" = 'https://starship.rs/config-schema.json'
format = "$status$shell$directory$all"
palette = "dracula"

[character]
success_symbol = "[\\$](green)"
error_symbol = "[\\$](red)"
vimcmd_symbol = "[<](green)"

[directory]
truncate_to_repo = true
style = "cyan"

# should show "rebasing" etc., hopefully without large performance impacts?
[git_state]
disabled = false

# can still add 100ms+ to prompt
[git_status]
disabled = true

# too long
[git_branch]
disabled = true

# keeps showing colima
[docker_context]
disabled = true

[status]
disabled = false
format = "[$status( SIG$signal_name)]($style) "

[cmd_duration]
format = '[\($duration\)]($style)'
min_time = 3000
style = "pink"

