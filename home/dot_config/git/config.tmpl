[init]
  defaultBranch = main

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[core]
  pager = "delta"
  editor = vim

[interactive]
  diffFilter = delta --color-only

[color]
  ui = auto

[push]
  default = current
  autoSetupRemote = true

[commit]
  verbose = true
  cleanup = scissors

[merge]
  ff = only

[pull]
  ff = only

[merge "mergiraf"]
  name = mergiraf
  driver = mergiraf merge --git %O %A %B -s %S -x %X -y %Y -p %P

[ghq]
  root = $GOPATH/src
  root = ~/src

[credential "https://github.com"]
  username = liamdawson

[include]
  path = ~/.config/git/aliases

[include]
  path = ~/.config/git/ids/personal/82049d196df75d4204b5e8c2166de5d197ae2610

{{ if eq (get . "work") true -}}
[include]
  path = ~/.config/git/work
{{ end -}}

{{ if eq (get . "personal") true -}}
[include]
  path = ~/.config/git/personal
{{ end -}}
