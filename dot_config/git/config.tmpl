[user]
  useConfigOnly = true
  name = Liam Dawson
  email = "{{ .git.personal_email }}"
  signingkey = {{ .git.signing_key }}

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[core]
  pager = "delta"
  editor = vim

[interactive]
  diffFilter = delta --color-only

[color]
  ui = auto

[push]
  default = current

[commit]
  verbose = true
  cleanup = scissors

[merge]
  ff = only

[pull]
  ff = only

[ghq]
  root = $GOPATH/src
  root = ~/w

[init]
  defaultBranch = main

[delta]
  features = line-numbers hyperlinks
  hyperlinks-file-link-format = vscode://file/{path}:{line}
  navigate = true

[alias]
  set-upstream = "!git branch --set-upstream-to="origin/$(git branch --show-current)" "$(git branch --show-current)""

[credential "https://github.com"]
  helper = 
  helper = !{{ joinPath .homebrew.bin "gh" | quote }} auth git-credential
	
[credential "https://gist.github.com"]
  helper = 
  helper = !{{ joinPath .homebrew.bin "gh" | quote }} auth git-credential

[include]
  path = ~/.config/git/private

[includeIf "gitdir:~/w/github.com/envato/"]
  path = ~/.config/git/envato
